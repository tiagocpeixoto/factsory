{
  "name": "factsory",
  "description": "A kind of factory and DI patterns library targeted to Typescript (w/o decorators)",
  "version": "0.6.0",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist/src/**/*"
  ],
  "author": {
    "name": "Tiago da Costa Peixoto",
    "email": "tiagocpeixoto@gmail.com"
  },
  "license": "MIT",
  "repository": "github:tiagocpeixoto/factsory",
  "bugs": {
    "url": "https://github.com/tiagocpeixoto/factsory/issues"
  },
  "homepage": "https://github.com/tiagocpeixoto/factsory",
  "keywords": [
    "typescript",
    "factory",
    "factory-pattern",
    "gof",
    "gof-pattern",
    "gof-factory",
    "gof-factory-pattern",
    "pattern",
    "pattern-library",
    "pattern-lib"
  ],
  "scripts": {
    "lint": "eslint \"src/**\"",
    "prettier:write": "yarn prettier --write src/**/*.ts",
    "prettier:check": "yarn prettier --check src/**/*.ts",
    "test": "yarn build && jest --config=jest.config.ts --detectOpenHandles --silent",
    "test:clear": "jest --clearCache",
    "validate": "yarn test && yarn lint && yarn prettier:check",
    "build": "tsc --build",
    "clean": "yarn build --clean"
  },
  "dependencies": {
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/chai-like": "^1.1.0",
    "@types/chai-things": "^0.0.34",
    "@types/faker": "^5.5.0",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "allure-commandline": "^2.13.8",
    "chai": "^4.3.4",
    "chai-like": "^1.1.1",
    "chai-things": "^0.2.0",
    "dotenv-safe": "^8.2.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "faker": "^5.5.2",
    "jest": "^26.6.1",
    "jest-allure": "^0.1.3",
    "jest-docblock": "^26.0.0",
    "jest-mock-extended": "^1.0.13",
    "jest-runner": "^26.6.1",
    "jest-runner-groups": "^2.0.1",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "4.2.3"
  }
}
